#include "pch.h"
#include <iostream>
#include <stdlib.h>
#include <time.h>
#include<windows.h>

float *values(int n)
{
	int x;
	float *tab = (float*)malloc(sizeof(float)*n);
	for (int i = 0; i < n; i++)
	{
		scanf_s("%f", &x);
		tab[i] = x;
	}
	return tab;
}

float *rand_values(int n)
{
	float *tab = (float*)malloc(sizeof(float)*n);
	for (int i = 0; i < n; i++)
	{
		tab[i] = 1.0*(rand() % 200) / ((rand() % 30) + 1);
	}
	return tab;
}

void values_print(float *wsk, int n)
{
	for (int i = 0; i < n; i++)
	{
		printf("%f ", wsk[i]);
	}
}

float sum(float *wsk, int n)
{
	float suma = 0;
	for (int i = 0; i < n; i++)
	{
		suma += wsk[i];
	}
	return suma;
}

float srednia(float *wsk, int n)
{
	float sr = 0;
	for (int i = 0; i < n; i++)
	{
		sr += wsk[i];
	}
	return sr / n;
}

float minimum(float *wsk, int n)
{
	float min = wsk[0];
	for (int i = 0; i < n; i++)
	{
		if (wsk[i] < min) 
			min = wsk[i];
	}
	return min;
}

float maximum(float *wsk, int n)
{
	float max = wsk[0];
	for (int i = 0; i < n; i++)
	{
		if (wsk[i] > max)
		max = wsk[i];
	}
	return max;
}

int add(int tablica[10], int tablica2[10], int tablica3[10], int n)
{
	for (int i = 0; i < n; i++)
	{
		tablica3[i] = tablica[i] + tablica2[i];
		printf("%d ", tablica3[i]);
	}

	return 0;
}

int main()
{
	int n = 10;
	srand(time(NULL));
	float *tab = rand_values(n);
	//float *tab2 = rand_values(n);

	values_print(tab, 10);

	printf("\n");

	printf("SUMA: %f \n", sum(tab, n));

	printf("SREDNIA: %f \n", srednia(tab, n));

	printf("MIN: %f \n", minimum(tab, n));

	printf("MAX: %f \n", maximum(tab, n));

	//add(tab, tab2, tab3, 10);
}
