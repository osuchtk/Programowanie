#include "pch.h"
#include <iostream>


int main()
{
	printf("BAZA DANYCH v1.0\nC- tworzenie wpisow\nR- przegladanie danych\nU- aktualizacja wspiow\nD- kasowanie wspisow\nE- wyjscie z programu\n");

	//tworzenie pliku
	char fileName[100];

	sprintf_s(fileName, "Baza.txt");
	FILE *outputFile;
	fopen_s(&outputFile, fileName, "w");
	fclose(outputFile);

	//tworzenie struktury na dane
	struct ID
	{
		char name[100];
		char surname[100];
		int telephone[20];
	};

	//i tu sie zaczyna zabawa
	for (; ;)
	{
		char znak;
		char potwierdzenie='Q';
		znak = getchar();

		switch (znak)
		{
		case 'C':
		
			break;

		case 'R':
		
			break;

		case 'U':
		
			break;

		case 'D':
			printf("Na pewno chcesz usunac? T-tak, N-nie\n");
			scanf_s("%c", potwierdzenie);
			if (potwierdzenie == 'T' && potwierdzenie == 't') {}


			if (potwierdzenie == 'N' && potwierdzenie == 'n') {}
			break;

		case 'E':
			exit(0);
			break;

		default:
			printf("Blad\n");
		}
	}
}




