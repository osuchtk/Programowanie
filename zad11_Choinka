void choinka2()
{
		for (int j = 0; j <= 8; j++) 
		{
			int z;
			for (z = 0; z < 12 - j; z++) 
				printf(" ");

			for (; z < 13 + j; z++)
				printf("#");

			printf("\n");
		}
}


int main(int argc, char *argv[])
{
	//choinka1();
	printf("---------------------------\n");
	//choinka2();
	printf("---------------------------\n");
	int zmienna = atoi(*argv);
	for (int i = 0; i < argc; i++)
	{
			int z;
			for (z = 0; z < 12 - i; z++)
				printf(" ");

			for (; z < 13 + i; z++)
				printf("#");

			printf("\n");
	}
}
