#include "pch.h"
#include <iostream>
#include <string>
using namespace std;

struct Zawodnik
{
	string nazwisko;
	int wyscig1;
	int wyscig2;
	int wyscig3;
	int punkty = 0;
};

void pobierz(struct Zawodnik* tab, int ile)
{
	for (int i = 0; i < ile; i++)
	{
		cout << "Podaj nazwisko: ";
		cin >> tab[i].nazwisko;
		cout << "Miejsce po pierwszym wyscigu: ";
		cin >> tab[i].wyscig1;
		cout << "Miejsce po drugim wyscigu: ";
		cin >> tab[i].wyscig2;
		cout << "Miejsce po trzecim wyscigu: ";
		cin >> tab[i].wyscig3;
		system("cls");
	}
}

void wyswietl(struct Zawodnik* tab, int ile)
{
	for (int i = 0; i < ile; i++)
	{
		cout << "Nazwisko: " << tab[i].nazwisko << endl;
		cout << "Miejsce po pierwszym wyscigu: " << tab[i].wyscig1 << endl;
		cout << "Miejsce po drugim wyscigu: " << tab[i].wyscig2 << endl;
		cout << "Miejsce po trzecim wyscigu: " << tab[i].wyscig3 << endl << endl;
	}
}

void punktacja(struct Zawodnik* tab, int ile)
{
	for (int i = 0; i < ile; i++)
	{
		switch (tab[i].wyscig1)
		{
		case 1:
			tab[i].punkty += 4;
			break;
		case 2:
			tab[i].punkty += 2;
			break;
		case 3:
			tab[i].punkty += 1;
			break;
		default:
			tab[i].punkty += 0;
			break;
		}

		switch (tab[i].wyscig2)
		{
		case 1:
			tab[i].punkty += 4;
			break;
		case 2:
			tab[i].punkty += 2;
			break;
		case 3:
			tab[i].punkty += 1;
			break;
		default:
			tab[i].punkty += 0;
			break;
		}

		switch (tab[i].wyscig3)
		{
		case 1:
			tab[i].punkty += 4;
			break;
		case 2:
			tab[i].punkty += 2;
			break;
		case 3:
			tab[i].punkty += 1;
			break;
		default:
			tab[i].punkty += 0;
			break;
		}

		cout << "Nazwisko: " << tab[i].nazwisko << " || " << "Liczba punktow po trzech wyscigach: " << tab[i].punkty << endl;
	}
}

int main()
{
	int n;
	cout << "Podaj liczbe zawodnikow: ";
	cin >> n;
	system("cls");
	Zawodnik *dane = new Zawodnik[n];

	pobierz(dane, n);
	cout << "Wybierz (1) aby wyswitlic miejsca zajete przez zawodnika\nWybierz (2) aby wyswitlic punktacje\nWybierz (3) aby zakonczyc program" << endl;
	int wybor;
	cin >> wybor;
	system("cls");

	switch (wybor)
	{
	case 1:
	wyswietl(dane, n);
	break;

	case 2:
	punktacja(dane, n);
	break;

	case 3:
	exit(0);
	break;

	default:
	cout << "Blad";
	break;
	}
}
